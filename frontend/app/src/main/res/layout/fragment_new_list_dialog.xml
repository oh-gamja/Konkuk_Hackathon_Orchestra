<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    android:background="@drawable/border_dialog"
    android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/lottemart_bold"
                android:text="리스트명을 입력해주세요"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="15자 이내 리스트명만 가능합니다"
                android:textSize="12dp"
                android:textAlignment="center"
                android:fontFamily="@font/lottemart_light"
                android:textColor="@color/gray300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="104dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/gray500">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:counterTextAppearance="@style/CounterTextAppearance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:background="@drawable/border_edit_text"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lottemart_light"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/button1"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="160dp"
                android:background="@drawable/border_1dp_gray500_btn_background"
                android:fontFamily="@font/lottemart_medium"
                android:text="취소"
                android:textColor="@color/gray500"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button2"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_1dp_lavender_main_btn_background"
                android:fontFamily="@font/lottemart_medium"
                android:text="추가"
                android:textColor="@color/lavender_main"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>