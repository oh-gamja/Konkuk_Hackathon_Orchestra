<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.playlists.PlaylistInfoActivity"
    android:background="@color/black">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:fontFamily="@font/kcc_ganpan"
        android:text="리스트명자리"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/lavender_main"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="49dp"
        android:fontFamily="@font/lottemart_light"
        android:text="리스트 삭제"
        android:textColor="#FF6666"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="18.75dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginRight="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash_bin"></ImageView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistRv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>