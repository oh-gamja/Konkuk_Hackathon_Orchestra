<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="316dp"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/rvContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1C1C1D"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/rvListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="게임리스트명"
            android:textSize="14dp"
            android:fontFamily="@font/lottemart_medium"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/rvContainer"
            app:layout_constraintTop_toTopOf="@+id/rvContainer" />

        <TextView
            android:id="@+id/rvGameNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:text="게임 수"
            android:textSize="12dp"
            android:fontFamily="@font/lottemart_light"
            android:textColor="#7C91E5"
            app:layout_constraintStart_toStartOf="@+id/rvContainer"
            app:layout_constraintTop_toTopOf="@+id/rvContainer" />

        <ImageView
            android:id="@+id/rvDelButton"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_botnav_heart_empty" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>