<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/radius3"
    android:layout_marginBottom="14dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_gameblock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/iv_gameblock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ex_rabbit"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_gameblock_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="게임명입니다"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/cv_gameblock"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"/>
    
    <FrameLayout
        android:layout_width="11.41dp"
        android:layout_height="10.9dp"
        app:layout_constraintStart_toEndOf="@id/cv_gameblock"
        app:layout_constraintTop_toBottomOf="@id/tv_gameblock_name"
        android:layout_marginStart="12dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/item_difficulty1"
            app:srcCompat="@drawable/ic_star_empty"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/item_difficulty2"
            app:srcCompat="@drawable/ic_star_filled"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/listBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_playlist_add"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/likeBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_like_heart_empty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/pink_main"
        android:textSize="12dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>