<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="38dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/DrvContainer"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:background="@color/gray700">

        <TextView
            android:id="@+id/DrvListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lottemart_bold"
            android:text="플레이리스트"
            android:textColor="@color/gray400"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/DrvContainer"
            app:layout_constraintStart_toStartOf="@+id/DrvContainer"
            app:layout_constraintTop_toTopOf="@+id/DrvContainer" />

        <ImageView
            android:id="@+id/DrvButton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_to_playlist" />

        <View
            android:layout_width="316dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DrvButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>