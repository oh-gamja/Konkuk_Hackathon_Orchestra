<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ohgamjafrontend" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender_sub2</item>
        <item name="colorPrimaryVariant">@color/lavender_sub2</item>
        <item name="colorOnPrimary">@color/lavender_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lavender_main</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--Counter-->
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
    </style>

    <style name="CounterTextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/lottemart_light</item>
        <item name="android:textColor">@color/lavender_sub2</item>
    </style>


</resources>